<!-- start: Header -->
<div class="navbar">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a id="main-menu-toggle" class="hidden-phone open"><i class="icon-reorder"></i></a>     
            <div class="row-fluid">
                <a class="brand" href="<%= APP_CONFIG['site']['url']%>/dashboard"><span><img src="/assets/logo.png"></span></a>
                <% if user_signed_in? %>
                    <% if current_user.level == 0%>
                        <div class="nav">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administração<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="nav-header">CADASTROS</li>
                                <li><%= link_to "Noticias", postnotices_path%></li>           
                                <li class="divider"></li>
                                <li class="nav-header">SERVIÇOS</li>
                                <li><%= link_to "Cidades", cities_path%></li>
                                <li><%= link_to "Categorias", categories_path%></li>
                            </ul>  
                        </div>
                    <%end%>

                    <!-- start: Header Menu -->
                    <div class="nav-no-collapse header-nav">
                        <ul class="nav pull-right">
                            <!-- start: User Dropdown -->
                            <div class="btn-group">
                                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                    <%= image_tag avatar_url(current_user).to_s, :size => "24x24" %>
                                    <span class="name"><%= current_user.name %></span>
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                <!-- dropdown menu links -->
                                    <li>
                                        <%= link_to edit_user_registration_path do %>
                                            <i class="icon-user"></i> Conta
                                        <%end%>
                                    </li>
                                    <li>
                                        <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Deseja sair do sistema?' } do %>
                                            <i class="icon-off"></i> 
                                            Sair
                                        <% end %>
                                    </li>
                                </ul>
                            </div>
                            <!-- end: User Dropdown -->
                        </ul>
                    </div>
                    <!-- end: Header Menu -->
                    <%else%>
                        <div class="pull-right">
                            <div class="popover-markup"><%= link_to 'Cadastrar', new_user_registration_path %> | <a href="#" class="trigger" placement="bottom">Acessar</a> 
                                <div class="head hide">Login</div>
                                <div class="content hide">
                                    <%= render "devise/sessions/login"%>
                                </div>
                                <div class="footer hide">test</div>
                            </div>
                        </div>
                    <%end%>
            </div>  
        </div>
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function(){
        $('.popover-markup>.trigger').popover({
            html: true,
            title: function () {
                return $(this).parent().find('.head').html();
            },
            content: function () {
                return $(this).parent().find('.content').html();
            },
            placement:'bottom'
        });
    });
</script>

