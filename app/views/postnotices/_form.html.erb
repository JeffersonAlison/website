<div class="container">
  <div class="well">
    <%= form_for(@postnotice, :html => {:multipart => true}, :class => "form-horizontal") do |f| %>
      <% if @postnotice.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@postnotice.errors.count, "error") %> prohibited this postnotice from being saved:</h2>

          <ul>
          <% @postnotice.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :title, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :title, :class => "input-xxlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :content, :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :content, :class => "input-xxlarge", :size => "1x8" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :image %>
        <%= f.file_field :image, :class => "input-xxlarge" %>
      </div>
      <div class="control-group">
        <label for="">Descrição</label>
        <div class="controls">
          <%= f.text_area :descbanner, :class => "input-xxlarge" , :size => "1x3"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :video %>
        <div class="controls">
          <%= f.text_area :video, :class => "input-xxlarge", :size => "1x3" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :author, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :author, :class => "input-xxlarge", :readonly => true, :value => "#{current_user.name}" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :startdate, :class => "control-label" %>
        <div class="controls">
          <%= f.date_select :startdate, :class => "dates" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :city, :class => "control-label" %>
        <div class="controls">
          <%= f.select :city_id, City.all.collect {|c| [c.name, c.id]}, :prompt => "Escolher uma cidade", :class => "input-xxlarge"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :categorie, :class => "control-label" %>
        <div class="controls">
          <%= f.select :categorie_id, Categorie.all.collect {|c| [c.name, c.id]}, :prompt => "Escolher uma categoria", :class => "input-xxlarge" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <%= f.check_box :featured %>
            <label for="postnotice_featured">Destaque</label>
          </label>
          <label class="checkbox">
            <%= f.check_box :reserved %>
            <label for="postnotice_reserved">Reservado</label>
          </label>
         <input type="submit" class="btn"></input>
        </div>
      </div>
    <% end %>
  </div>
</div>