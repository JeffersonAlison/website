<div class="container-fluid">
    <div class="page-header">
        <h1>Postagens</h1>
        <div class="pull-right">
            <%= link_to  new_postnotice_path, :class => "btn btn-success" do %>
                <span class="icon-plus"></span>
                Novo
            <%end%>
        </div>
    </div>
    <table class="table table-bordered">
  <tr>
    <th>Titulo</th>
    <th>Conteúdo</th>
    <th>Autor</th>
    <th>Cidade</th>
    <th>Categoria</th>
    <th collspan="3">Ações</th>
  </tr>

<% @postnotices.each do |postnotice| %>
  <tr>
    <td><%= postnotice.title %></td>
    <td><%= postnotice.content %></td>
    <td><%= postnotice.author %></td>
    <td><%= postnotice.city.name %></td>
    <td><%= postnotice.categorie.name %></td>
    <td class="actions-table">
        <%= link_to postnotice, :class => "btn btn-info", :title => "Visualizar" do%>
            <span class="icon-zoom-in"></span>
        <%end%>
    </td>
    <td class="actions-table">
        <%= link_to edit_postnotice_path(postnotice), :class => "btn btn-warning", :title => "Editar" do%>
            <span class="icon-edit"></span>
        <%end%>
    </td>
    <td class="actions-table">
        <%= link_to postnotice, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :title => "Excluir" do %>
            <span class="icon-trash"></span>
        <%end%>
    </td>
  </tr>
<% end %>
</table>

</div>