<div class="login">
	<h2>Acessar</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
  	<div class="control-group">
  		<div class="controls">
  			<%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" %>
		</div>
	</div>

   	<div class="control-group">
  		<div class="controls">
    		<%= f.password_field :password, :placeholder => "Senha" %>
		</div>
	</div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
		<div class="controls">
			<label class="checkbox">
    			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
			</label>
		</div>    	
    </div>
  <% end -%>

  <div class="control-group">
  	<%= f.submit "Logar", :class => "btn" %>
  </div>
<% end %>
<hr>
<%= render "devise/shared/links" %>

</div>