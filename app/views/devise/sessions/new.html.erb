<div class="account-container stacked">
  
  <div class="content clearfix">
	<h1>Acessar</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>

<div class="login-fields">
        
        <p>FaÃ§a login usando a sua conta registrada:</p>
        
        <div class="field">
          <label for="username">E-mail:</label>
          <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail", :class => "login username-field" %>
        </div> <!-- /field -->
        
        <div class="field">
          <label for="password">Senha:</label>
         <%= f.password_field :password, :placeholder => "Senha", :class => "login password-field" %>
        </div> <!-- /password -->
        
      </div> <!-- /login-fields -->
      <div class="login-actions">
        
        <span class="login-checkbox">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <%= f.label "lembrar-me" %>
          <%end%>
        </span>

        <%= f.submit "Logar", :class => "button btn btn-warning btn-large" %>
    
        
      </div> <!-- .actions -->

<% end %>

  </div> <!-- /content -->
  
</div> <!-- /account-container -->



<!-- Text Under Box -->
<div class="login-extra">
 <%= render "devise/shared/links" %>
</div> <!-- /login-extra -->