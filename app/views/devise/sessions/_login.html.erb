
	<h2>Acessar</h2>

<%= form_for("user", :url => user_session_path, :class => "form-horizontal") do |f| %>
  	<div class="control-group">
  		<div class="controls">
  			<%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" %>
		</div>
	</div>

   	<div class="control-group">
  		<div class="controls">
    		<%= f.password_field :password, :placeholder => "Senha" %>
		</div>
	</div>


  <div class="control-group">
  	<%= f.submit "Logar", :class => "btn" %>
  </div>
<% end %>
<hr>
